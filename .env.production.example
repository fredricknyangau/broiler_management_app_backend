# --- Render Environment Variables ---
# Copy these values to your Render Service "Environment" tab

# Database (Render will provide this automatically if you attach a Postgres DB)
# DATABASE_URL=postgresql://user:password@hostname:port/dbname

# Redis (Render will provide this automatically if you attach a Redis instance)
# REDIS_URL=redis://hostname:port

# Security
SECRET_KEY=generate-a-secure-random-string-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application Settings
APP_NAME="Broiler Farm Management API"
DEBUG=False
API_V1_PREFIX=/api/v1

# CORS - CRITICAL FOR FRONTEND CONNECTION
# Replace with your actual Vercel Frontend URL after deployment
BACKEND_CORS_ORIGINS=["https://kukufiti.vercel.app"]
